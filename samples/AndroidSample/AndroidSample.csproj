  <ItemGroup>
    <ProguardConfiguration Include="pspdfkit-proguard.cfg" />
    <AndroidResource Include="Resources\mipmap-hdpi\xamagon.png" />
    <AndroidResource Include="Resources\mipmap-mdpi\xamagon.png" />
    <AndroidResource Include="Resources\mipmap-xhdpi\xamagon.png" />
    <AndroidResource Include="Resources\mipmap-xxhdpi\xamagon.png" />
    <AndroidResource Include="Resources\mipmap-xxxhdpi\xamagon.png" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\PSPDFKit.dotnet.Android\PSPDFKit.dotnet.Android.csproj" />
  </ItemGroup>
